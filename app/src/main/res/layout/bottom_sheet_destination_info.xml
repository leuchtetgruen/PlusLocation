<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_destination"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundBottomSheet"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    app:behavior_peekHeight="50dp"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/txtMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More information"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorLight"
        />

    <TextView
        android:id="@+id/txtDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMoreInfo"
        android:layout_marginTop="10dp"

        android:text="@string/ipsum"
        android:textColor="@color/colorLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/txtDirections"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/btnChoosePOI"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_place_black_24dp"

            android:textColor="@color/colorLight"
            android:text="Choose POI" />


        <Button
            android:id="@+id/btnChangeCode"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_keyboard_black_24dp"
            android:textColor="@color/colorLight"
            android:text="Change code"
            />

        <Button
            android:id="@+id/btnShowOnMap"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_map_black_24dp"
            android:text="Show on Map"

            android:textColor="@color/colorLight" />

    </LinearLayout>
</RelativeLayout>