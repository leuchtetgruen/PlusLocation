<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_destination"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    android:theme="@style/BottomSheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="50dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/txtMoreInfo"
        style="@style/BottomSheetHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="More information" />

    <TextView
        android:id="@+id/txtNearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMoreInfo"
        android:layout_marginTop="10dp"

        android:text="@string/ipsum" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/txtNearby"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">


        <Button
            android:id="@+id/btnChoosePOI"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_place_light_24dp"
            android:text="Choose Nearby POI" />


        <Button
            android:id="@+id/btnChangeCode"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_keyboard_light_24dp"
            android:text="Change code" />

        <Button
            android:id="@+id/btnShowOnMap"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_map_light_24dp"
            android:text="Show on Map" />

    </LinearLayout>
</RelativeLayout>