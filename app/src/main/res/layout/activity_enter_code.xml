<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="de.leuchtetgruen.pluslocation.ui.activities.EnterCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearLayout"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="monospace"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/instruction_paste_from_clipboard" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/linearLayout"
        android:baselineAligned="false">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:rowCount="4"
            android:columnCount="3">

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_row="0"
                android:onClick="addNumber"
                android:text="C" />

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_row="0"
                android:onClick="addNumber"
                android:text="F" />

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="G"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="H"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="J"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="2"
                android:layout_row="1"
                android:text="M"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="P"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Q"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="2"
                android:layout_row="2"
                android:text="R"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_row="3"
                android:text="V"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_row="3"
                android:text="W"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="2"
                android:layout_row="3"
                android:text="X"
                android:onClick="addNumber"/>


        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:rowCount="4"
            android:columnCount="3"
            >

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="2"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="3"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="4"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="5"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="6"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="2"
                android:layout_row="1"
                android:text="7"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="8"
                android:onClick="addNumber"/>

            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="9"
                android:onClick="addNumber"/>



            <Button
                style="@style/CodeButton"
                android:layout_width="50dp"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:layout_height="95dp"
                android:text="+"
                android:onClick="addNumber"
                />

            <Button
                style="@style/CodeButton"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:layout_width="100dp"
                android:text="@string/del_key_caption"
                android:onClick="removeChar"/>

        </GridLayout>
    </LinearLayout>

    <Button
        style="@style/CodeButton"
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout"
        android:text="@string/save"
        android:onClick="save"/>

</RelativeLayout>
