<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="BottomSheet" parent="AppTheme">
        <item name="android:background">@color/backgroundBottomSheet</item>
    </style>

    <style name="BottomSheetHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="CodeButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorDarkerTransparent</item>
        <item name="android:layout_margin">2dp</item>
    </style>
</resources>
