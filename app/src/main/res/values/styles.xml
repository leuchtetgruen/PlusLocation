<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="BottomSheet" parent="AppTheme">
        <item name="android:background">@color/backgroundBottomSheet</item>
    </style>

    <style name="BottomSheetHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorLight</item>
    </style>

</resources>
